<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BGC" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#474747</item>
        <item name="colorPrimaryVariant">#474747</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">#474747</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#474747</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">#EEEEEE</item>
        <item name="android:fontFamily">@font/be_vietnam_medium</item>
    </style>
    <style name="PopupMenuTheme" parent="@style/ThemeOverlay.AppCompat.Light">
        <item name="android:itemTextAppearance">@style/PopupMenuTextAppearance</item>
        <item name="android:itemBackground">@drawable/shape_menu</item>
    </style>

    <style name="PopupMenuTextAppearance" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/be_vietnam_medium</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="CustomDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@drawable/shape</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:fontFamily">@font/be_vietnam_medium</item>
    </style>
</resources>